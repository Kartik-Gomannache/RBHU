@model RBHU_DbServices.ViewModel.ProductListViewModel
@{
    ViewData["Title"] = "Product Management";
    Layout = "";
}

<link rel="icon" type="image/x-icon" href="~/images/as_logo.png">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<div class="product-container">
    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header Section -->
    <div class="product-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1"><i class="fas fa-box me-2"></i>Product Management</h4>
                <p class="text-muted mb-0 small">Manage your product catalog</p>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-sm btn-outline-secondary" onclick="showStats()">
                    <i class="fas fa-chart-bar me-1"></i><span class="btn-text">Statistics</span>
                </button>
                <a href="@Url.Action("Create", "Product")" class="btn btn-sm btn-success">
                    <i class="fas fa-plus me-1"></i><span class="btn-text">Add Product</span>
                </a>
                <button class="btn btn-sm btn-primary" onclick="refreshData()">
                    <i class="fas fa-sync-alt me-1" id="refreshIcon"></i><span class="btn-text">Refresh</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Stats Cards (Collapsible) -->
    <div id="statsPanel" class="stats-panel" style="display: none;">
        <div class="row g-3 mb-4">
            <div class="col-lg-3 col-md-6 col-6">
                <div class="stat-card">
                    <div class="stat-icon bg-primary-light">
                        <i class="fas fa-box text-primary"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">@Model.Products.Count</h3>
                        <p class="stat-label">Total Products</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-6">
                <div class="stat-card">
                    <div class="stat-icon bg-success-light">
                        <i class="fas fa-tags text-success"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">@Model.Categories.Count</h3>
                        <p class="stat-label">Categories</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-6">
                <div class="stat-card">
                    <div class="stat-icon bg-warning-light">
                        <i class="fas fa-percentage text-warning"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">@Model.Products.Count(p => p.OfferPrice > 0)</h3>
                        <p class="stat-label">On Offer</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-6">
                <div class="stat-card">
                    <div class="stat-icon bg-info-light">
                        <i class="fas fa-rupee-sign text-info"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">₹@(Model.Products.Any() ? Model.Products.Average(p => p.Price).ToString("N0") : "0")</h3>
                        <p class="stat-label">Avg Price</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
        <div class="row g-2">
            <div class="col-lg-4 col-md-6 col-12">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input id="searchBox" class="form-control" placeholder="Search products by name, description..." />
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-6">
                <select id="categoryFilter" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Name">@category.Name</option>
                    }
                </select>
            </div>
            <div class="col-lg-2 col-md-6 col-6">
                <select id="priceFilter" class="form-select">
                    <option value="">All Prices</option>
                    <option value="under-1000">Under ₹1K</option>
                    <option value="1000-5000">₹1K - ₹5K</option>
                    <option value="5000-10000">₹5K - ₹10K</option>
                    <option value="above-10000">Above ₹10K</option>
                </select>
            </div>
            <div class="col-lg-3 col-md-6 col-12">
                <select id="offerFilter" class="form-select">
                    <option value="">All Products</option>
                    <option value="on-offer">On Offer</option>
                    <option value="regular">Regular Price</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Product Table -->
    <div class="table-container">
        <table id="productsTable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Product Info</th>
                    <th>Category</th>
                    <th>Pricing</th>
                    <th>Created</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr id="product-row-@product.Id">
                        <td>
                            <div class="product-info">
                                <div class="product-image">
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" alt="@product.Name">
                                    }
                                    else
                                    {
                                        <div class="product-placeholder">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    }
                                </div>
                                <div class="product-details">
                                    <div class="product-name">@product.Name</div>
                                    @if (!string.IsNullOrEmpty(product.Description))
                                    {
                                        <div class="product-description">@product.Description</div>
                                    }
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="category-info">
                                <span class="badge badge-primary">@product.Category?.Name</span>
                                @if (product.SubCategory1 != null)
                                {
                                    <span class="badge badge-secondary">@product.SubCategory1.Name</span>
                                }
                                @if (product.SubCategory2 != null)
                                {
                                    <span class="badge badge-light">@product.SubCategory2.Name</span>
                                }
                            </div>
                        </td>
                        <td>
                            <div class="pricing-info">
                                @if (product.OfferPrice > 0 && product.OfferPrice < product.Price)
                                {
                                    <div class="price-offer">₹@product.OfferPrice.ToString("N0")</div>
                                    <div class="price-original">₹@product.Price.ToString("N0")</div>
                                    var discount = ((product.Price - product.OfferPrice) / product.Price) * 100;
                                    <div class="discount-badge">@discount.ToString("F0")% OFF</div>
                                }
                                else
                                {
                                    <div class="price-current">₹@product.Price.ToString("N0")</div>
                                }
                            </div>
                        </td>
                        <td>
                            @if (product.CreatedAt.HasValue)
                            {
                                <div class="date-info">
                                    <div class="date">@product.CreatedAt.Value.ToString("MMM dd, yyyy")</div>
                                    <div class="time">@product.CreatedAt.Value.ToString("HH:mm")</div>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <div class="status-badges">
                                @if (product.OfferPrice > 0 && product.OfferPrice < product.Price)
                                {
                                    <span class="badge badge-offer">
                                        <i class="fas fa-tag"></i> On Offer
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-active">
                                        <i class="fas fa-check"></i> Active
                                    </span>
                                }
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <span class="badge badge-image">
                                        <i class="fas fa-camera"></i> Image
                                    </span>
                                }
                            </div>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn-action btn-view" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn-action btn-edit" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="btn-action btn-delete" onclick="confirmDelete(@product.Id, '@product.Name')" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirm Delete
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3">Are you sure you want to delete this product?</p>
                    <div class="product-to-delete">
                        <strong id="productToDelete"></strong>
                    </div>
                    <div class="alert alert-warning mt-3 mb-0">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        This action cannot be undone.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn" onclick="executeDelete()">
                        <i class="fas fa-trash me-2"></i>Delete Product
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>

<script>
    let table;
    let productToDeleteId = null;

    // Theme Management
    function initTheme() {
        const savedTheme = localStorage.getItem('adminTheme') || 'light';
        applyTheme(savedTheme);
    }

    function applyTheme(theme) {
        document.body.setAttribute('data-theme', theme);
    }

    $(document).ready(function () {
        initTheme();

        // Listen for theme changes from parent dashboard
        window.addEventListener('message', function(event) {
            if (event.data && event.data.type === 'THEME_CHANGE') {
                applyTheme(event.data.theme);
            }
        });

        table = $('#productsTable').DataTable({
            "order": [[3, "desc"]],
            "pageLength": 25,
            "responsive": true,
            "columnDefs": [
                { "orderable": false, "targets": [5] },
                { "width": "30%", "targets": 0 },
                { "width": "15%", "targets": 1 },
                { "width": "15%", "targets": 2 },
                { "width": "12%", "targets": 3 },
                { "width": "13%", "targets": 4 },
                { "width": "15%", "targets": 5 }
            ],
            "language": {
                "emptyTable": "No products found",
                "info": "Showing _START_ to _END_ of _TOTAL_ products",
                "infoEmpty": "Showing 0 to 0 of 0 products",
                "search": "Search:"
            }
        });

        // Auto-hide alerts
        setTimeout(function () {
            $('.alert').fadeOut('slow');
        }, 5000);

        // Search functionality
        $('#searchBox').on('keyup', function () {
            table.search(this.value).draw();
        });

        // Category filter
        $('#categoryFilter').on('change', function () {
            table.column(1).search(this.value).draw();
        });

        // Price filter
        $('#priceFilter').on('change', function () {
            var filterValue = this.value;
            $.fn.dataTable.ext.search.pop();

            if (filterValue) {
                $.fn.dataTable.ext.search.push(
                    function (settings, data, dataIndex) {
                        var priceText = data[2];
                        var priceMatch = priceText.match(/₹([\d,]+)/);
                        if (!priceMatch) return false;

                        var price = parseInt(priceMatch[1].replace(/,/g, ''));

                        switch (filterValue) {
                            case 'under-1000':
                                return price < 1000;
                            case '1000-5000':
                                return price >= 1000 && price <= 5000;
                            case '5000-10000':
                                return price > 5000 && price <= 10000;
                            case 'above-10000':
                                return price > 10000;
                            default:
                                return true;
                        }
                    }
                );
            }
            table.draw();
        });

        // Offer filter
        $('#offerFilter').on('change', function () {
            var filterValue = this.value;

            if (filterValue === 'on-offer') {
                table.column(4).search('On Offer').draw();
            } else if (filterValue === 'regular') {
                table.column(4).search('Active').draw();
            } else {
                table.column(4).search('').draw();
            }
        });
    });

    function refreshData() {
        $('#refreshIcon').addClass('fa-spin');
        setTimeout(function () {
            location.reload();
        }, 1000);
    }

    function showStats() {
        $('#statsPanel').slideToggle(300);
    }

    function confirmDelete(productId, productName) {
        productToDeleteId = productId;
        $('#productToDelete').text(productName);
        var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        deleteModal.show();
    }

    function executeDelete() {
        if (!productToDeleteId) return;

        const confirmBtn = $('#confirmDeleteBtn');
        const originalHtml = confirmBtn.html();
        confirmBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Deleting...');

        $.ajax({
            url: '@Url.Action("DeleteProduct", "Product")',
            type: 'POST',
            data: { id: productToDeleteId },
            success: function (response) {
                confirmBtn.prop('disabled', false).html(originalHtml);

                if (response.success) {
                    var deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
                    deleteModal.hide();

                    table.row($(`#product-row-${productToDeleteId}`)).remove().draw();

                    showToast('Product deleted successfully!', 'success');
                } else {
                    showToast(response.message || 'Error deleting product.', 'error');
                }
            },
            error: function () {
                confirmBtn.prop('disabled', false).html(originalHtml);
                showToast('An error occurred while deleting the product.', 'error');
            }
        });
    }

    function showToast(message, type) {
        const bgColor = type === 'success' ? '#10b981' : '#ef4444';
        const icon = type === 'success' ? 'check-circle' : 'exclamation-circle';

        const toast = $(`
            <div class="custom-toast" style="background: ${bgColor}">
                <i class="fas fa-${icon} me-2"></i>${message}
            </div>
        `);

        $('body').append(toast);

        setTimeout(() => {
            toast.addClass('show');
        }, 100);

        setTimeout(() => {
            toast.removeClass('show');
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }
</script>

