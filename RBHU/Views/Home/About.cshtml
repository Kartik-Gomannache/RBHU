@{
    ViewData["Title"] = "About RBHU Solutions";
}

<link href="~/css/about.css" rel="stylesheet" />
<div class="rbhu-page-wrapper">
    <!-- Hero Banner -->
    <section class="rbhu-about-hero">
        <div class="rbhu-hero-overlay"></div>
        <div class="container">
            <div class="rbhu-hero-content">
                <span class="rbhu-hero-badge">Excellence Since 2022</span>
                <h1 class="rbhu-hero-title">Industrial Solutions Provider for Goa & Beyond</h1>
                <p class="rbhu-hero-subtitle">Delivering premium pneumatic tools, abrasives, power tools, and safety equipment to industries across India</p>
            </div>
        </div>
    </section>

    <!-- Company Introduction -->
    <section class="rbhu-intro-section">
        <div class="container">
            <div class="row g-5 align-items-center">
                <div class="col-lg-6">
                    <div class="rbhu-intro-content">
                        <span class="rbhu-section-label">Who We Are</span>
                        <h2 class="rbhu-section-title">RBHU Solutions LLP</h2>
                        <div class="rbhu-divider"></div>
                        <p class="rbhu-intro-text">
                            RBHU Solutions LLP was founded by <strong>Mr. Rupesh Bothra</strong> and <strong>Mr. Aniket Pawashe</strong> to provide
                            industrial solutions to the Goa Industrial area. Our combined expertise brings over <strong>22 years of experience</strong>
                            in the industrial trading and services sector.
                        </p>
                        <p class="rbhu-intro-text">
                            Mr. Rupesh Bothra brings over 12 years of experience, having successfully established businesses in Pune, Kagal,
                            and Kolhapur MIDC areas. His enthusiastic and never-give-up attitude has played a pivotal role in fulfilling client needs.
                        </p>
                        <p class="rbhu-intro-text">
                            Mr. Aniket Pawashe, an MBA graduate with rich corporate and business experience, has established successful businesses
                            in industrial trading over the last decade at Belgaum, Hyderabad, Bangalore, and Hubli. His straightforward approach
                            and problem-solving skills ensure that client expectations are always exceeded.
                        </p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="rbhu-image-stack">
                        <div class="rbhu-image-main">
                            <img src="~/images/rbhu-facility.jpg" alt="RBHU Solutions Facility" class="img-fluid">
                        </div>
                        <div class="rbhu-stats-card">
                            <div class="rbhu-stat-item">
                                <h3>22+</h3>
                                <p>Years Combined Experience</p>
                            </div>
                            <div class="rbhu-stat-divider"></div>
                            <div class="rbhu-stat-item">
                                <h3>8+</h3>
                                <p>Industries Served</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Founders Section -->
    <section class="rbhu-founders-section">
        <div class="container">
            <div class="text-center mb-5">
                <span class="rbhu-section-label">Leadership</span>
                <h2 class="rbhu-section-title">Meet Our Founders</h2>
            </div>
            <div class="row g-4 justify-content-center">
                <div class="col-lg-5 col-md-6">
                    <div class="rbhu-founder-card">
                        <div class="rbhu-founder-image">
                            <img src="~/images/founders/rupesh-bothra.jpg" alt="Rupesh Bothra">
                            <div class="rbhu-founder-overlay">
                                <a href="tel:9968068454" class="rbhu-founder-contact"><i class="fas fa-phone"></i></a>
                                <a href="mailto:rbhugoa@gmail.com" class="rbhu-founder-contact"><i class="fas fa-envelope"></i></a>
                            </div>
                        </div>
                        <div class="rbhu-founder-info">
                            <h3>Rupesh Bothra</h3>
                            <span class="rbhu-founder-role">Co-Founder & Designated Partner</span>
                            <p>Over 12 years of experience in industrial trading with successful ventures in Pune, Kagal, and Kolhapur MIDC areas.</p>
                            <div class="rbhu-founder-contact-info">
                                <i class="fas fa-phone-alt"></i> +91 9968068454
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 col-md-6">
                    <div class="rbhu-founder-card">
                        <div class="rbhu-founder-image">
                            <img src="~/images/founders/aniket-pawashe.jpg" alt="Aniket Pawashe">
                            <div class="rbhu-founder-overlay">
                                <a href="tel:9108048901" class="rbhu-founder-contact"><i class="fas fa-phone"></i></a>
                                <a href="mailto:rbhugoa@gmail.com" class="rbhu-founder-contact"><i class="fas fa-envelope"></i></a>
                            </div>
                        </div>
                        <div class="rbhu-founder-info">
                            <h3>Aniket Pawashe</h3>
                            <span class="rbhu-founder-role">Co-Founder & Designated Partner</span>
                            <p>MBA graduate with 10+ years in industrial trading, establishing businesses in Belgaum, Hyderabad, Bangalore, and Hubli.</p>
                            <div class="rbhu-founder-contact-info">
                                <i class="fas fa-phone-alt"></i> +91 9108048901
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="rbhu-cta-section">
        <div class="container">
            <div class="rbhu-cta-content">
                <h2>Ready to Get Started?</h2>
                <p>Let our team of experts help you find the right industrial solutions for your business</p>
                <div class="rbhu-cta-buttons">
                    <a asp-area="" asp-controller="Home" asp-action="Contact" class="rbhu-btn rbhu-btn-primary">
                        Contact Us <i class="fas fa-arrow-right"></i>
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Products" class="rbhu-btn rbhu-btn-secondary">
                        View Products <i class="fas fa-boxes"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>
