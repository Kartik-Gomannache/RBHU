                                            <div class="stars">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= Math.Floor(rating))
                                                    {
                                                        <i class="fas fa-star"></i>
                                                    }
                                                    else if (i - rating < 1)
                                                    {
                                                        <i class="fas fa-star-half-alt"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star"></i>
                                                    }
                                                }
                                            </div>
                                            <span class="rating-text">@rating.ToString("0.0") (@reviewCount reviews)</span>
                                        </div> *@

