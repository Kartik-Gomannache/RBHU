                                var savings = product.Price - product.OfferPrice;
                                var rating = 3.5 + (new Random().NextDouble() * 1.5);
                                var reviewCount = new Random().Next(50, 500);

                                <div class="product-card"
                                     data-category="@(product.Category?.Name ?? "Uncategorized")"
                                     data-price="@product.OfferPrice"
                                     data-discount="@discountPercentage"
                                     data-name="@product.Name"
                                     data-aos="fade-up">

                                    <!-- Badges -->
                                    <div class="product-badges">
                                        <span class="badge-discount">@discountPercentage% OFF</span>
