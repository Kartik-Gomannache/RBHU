@section Scripts {
    <script src="~/js/site.js"></script>
    <script>
        // Validation functions
        function showValidationMessage(fieldId, message) {
            const field = document.getElementById(fieldId);
            const feedback = field.parentNode.querySelector('.invalid-feedback');
            
            if (!field || !feedback) return;
            
            field.classList.remove('is-invalid');
            feedback.style.display = 'none';
            
            if (message) {
                field.classList.add('is-invalid');
                feedback.textContent = message;
                feedback.style.display = 'block';
            }
        }

        function clearValidationMessage(fieldId) {
            const field = document.getElementById(fieldId);
            const feedback = field.parentNode.querySelector('.invalid-feedback');
            
            if (!field || !feedback) return;
            
            field.classList.remove('is-invalid');
            feedback.style.display = 'none';
        }

        function validateFullName() {
            const name = document.getElementById('FullName').value.trim();
            
            if (!name) {
                showValidationMessage('FullName', 'Full Name is required');
                return false;
            }
            
            if (name.length < 2) {
                showValidationMessage('FullName', 'Name must be at least 2 characters long');
                return false;
            }
            
            if (name.length > 100) {
                showValidationMessage('FullName', 'Full Name cannot exceed 100 characters');
                return false;
            }
            
            if (!/^[a-zA-Z\s'-]+$/.test(name)) {
                showValidationMessage('FullName', 'Name can only contain letters, spaces, hyphens and apostrophes');
                return false;
            }
            
            clearValidationMessage('FullName');
            return true;
        }

        function validateEmail() {
            const email = document.getElementById('Email').value.trim();
            
            if (!email) {
                showValidationMessage('Email', 'Email is required');
                return false;
            }
            
            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            if (!emailRegex.test(email)) {
                showValidationMessage('Email', 'Please enter a valid email address');
                return false;
            }
            
            if (email.length > 255) {
                showValidationMessage('Email', 'Email cannot exceed 255 characters');
                return false;
            }
            
            clearValidationMessage('Email');
            return true;
        }

        function validatePhoneNumber() {
            const phone = document.getElementById('PhoneNumber').value.trim();
            
            if (!phone) {
                showValidationMessage('PhoneNumber', 'Phone Number is required');
                return false;
            }
            
            const cleanPhone = phone.replace(/[\s\-\(\)\+]/g, '');
            
            if (cleanPhone.length < 10) {
                showValidationMessage('PhoneNumber', 'Phone number must be at least 10 digits');
                return false;
            }
            
            if (cleanPhone.length > 20) {
                showValidationMessage('PhoneNumber', 'Phone Number cannot exceed 20 characters');
                return false;
            }
            
            if (!/^\d+$/.test(cleanPhone)) {
                showValidationMessage('PhoneNumber', 'Please enter a valid phone number');
                return false;
            }
            
            clearValidationMessage('PhoneNumber');
            return true;
        }

        function validateCompany() {
            const company = document.getElementById('Company').value.trim();
            
            if (company && company.length > 100) {
                showValidationMessage('Company', 'Company name cannot exceed 100 characters');
                return false;
            }
            
            clearValidationMessage('Company');
            return true;
        }

        function validateGSTNumber() {
            const gst = document.getElementById('GSTNumber').value.trim();
            
            if (gst) {
                if (gst.length > 15) {
                    showValidationMessage('GSTNumber', 'GST Number cannot exceed 15 characters');
                    return false;
                }
                
                const gstRegex = /^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$/;
                if (!gstRegex.test(gst)) {
                    showValidationMessage('GSTNumber', 'Please enter a valid GST number (e.g., 22AAAAA0000A1Z5)');
                    return false;
                }
            }
            
            clearValidationMessage('GSTNumber');
            return true;
        }

        function validateSubject() {
            const subject = document.getElementById('Subject').value.trim();
            
            if (!subject) {
                showValidationMessage('Subject', 'Subject is required');
                return false;
            }
            
            if (subject.length > 200) {
                showValidationMessage('Subject', 'Subject cannot exceed 200 characters');
                return false;
            }
            
            clearValidationMessage('Subject');
            return true;
        }

        function validateMessage() {
            const message = document.getElementById('Message').value.trim();
            
            if (!message) {
                showValidationMessage('Message', 'Message is required');
                return false;
            }
            
            if (message.length < 10) {
                showValidationMessage('Message', 'Message must be at least 10 characters long');
                return false;
            }
            
            if (message.length > 2000) {
                showValidationMessage('Message', 'Message cannot exceed 2000 characters');
                return false;
            }
            
            clearValidationMessage('Message');
            return true;
        }

        function validateForm() {
            let isValid = true;
            
            const validations = [
                validateFullName(),
                validateEmail(),
                validatePhoneNumber(),
                validateCompany(),
                validateGSTNumber(),
                validateSubject(),
                validateMessage()
            ];
            
            isValid = validations.every(validation => validation === true);
            
            return isValid;
        }

        function initializeValidation() {
            // Full Name validation
            document.getElementById('FullName').addEventListener('blur', validateFullName);
            document.getElementById('FullName').addEventListener('input', function() {
                if (this.value.trim().length > 0) {
                    validateFullName();
                } else {
                    clearValidationMessage('FullName');
                }
            });

            // Email validation
            document.getElementById('Email').addEventListener('blur', validateEmail);
            document.getElementById('Email').addEventListener('input', function() {
                if (this.value.trim().length > 0) {
                    validateEmail();
                } else {
                    clearValidationMessage('Email');
                }
            });

            // Phone validation
            document.getElementById('PhoneNumber').addEventListener('blur', validatePhoneNumber);
            document.getElementById('PhoneNumber').addEventListener('input', function() {
                if (this.value.trim().length > 0) {
                    validatePhoneNumber();
                } else {
                    clearValidationMessage('PhoneNumber');
                }
            });

            // Company validation
            document.getElementById('Company').addEventListener('blur', validateCompany);
            document.getElementById('Company').addEventListener('input', validateCompany);

            // GST validation
            document.getElementById('GSTNumber').addEventListener('blur', validateGSTNumber);
            document.getElementById('GSTNumber').addEventListener('input', validateGSTNumber);

            // Subject validation
            document.getElementById('Subject').addEventListener('change', validateSubject);
            document.getElementById('Subject').addEventListener('blur', validateSubject);

            // Message validation
            document.getElementById('Message').addEventListener('blur', validateMessage);
            document.getElementById('Message').addEventListener('input', function() {
                if (this.value.trim().length > 0) {
                    validateMessage();
                } else {
                    clearValidationMessage('Message');
                }
            });
        }

        function sendContactEmail() {
            // Validate form before submission
            if (!validateForm()) {
                alert('Please correct the validation errors before submitting.');
                
                const firstInvalidField = document.querySelector('.is-invalid');
                if (firstInvalidField) {
                    firstInvalidField.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    firstInvalidField.focus();
                }
                return;
            }

            var btn = document.getElementById('submitBtn');
            
            // Prevent double submission
            if (btn.disabled) return;
            
            // Set loading state
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Sending...';
            
            // Prepare contact data object
            var contactData = {
                FullName: document.getElementById('FullName').value.trim(),
                Email: document.getElementById('Email').value.trim(),
                PhoneNumber: document.getElementById('PhoneNumber').value.trim(),
                Company: document.getElementById('Company').value.trim(),
                GSTNumber: document.getElementById('GSTNumber').value.trim(),
                Subject: document.getElementById('Subject').value.trim(),
                Message: document.getElementById('Message').value.trim()
            };
            
            // AJAX call using jQuery (consistent with your other files)
            $.ajax({
                url: '/Home/SendMail',
                type: 'POST',
                data: { model: contactData },
                success: function(response) {
                    // Reset button
                    btn.disabled = false;
                    btn.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Send Message';
                    
                    if (response.success) {
                        alert('Message sent successfully!');
                        // Clear form
                        document.getElementById('contactFormContainer').querySelectorAll('input, select, textarea').forEach(function(field) {
                            field.value = '';
                            field.classList.remove('is-invalid');
                        });
                        // Clear all validation messages
                        document.querySelectorAll('.invalid-feedback').forEach(function(feedback) {
                            feedback.style.display = 'none';
                        });
                    } else {
                        alert('Error: ' + (response.message || 'Failed to send message'));
                    }
                },
                error: function(xhr, status, error) {
                    // Reset button
                    btn.disabled = false;
                    btn.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Send Message';
                    
                    let errorMessage = 'Error sending message. Please try again.';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMessage = xhr.responseJSON.message;
                    } else if (xhr.responseText) {
                        errorMessage = xhr.responseText;
                    }
                    alert(errorMessage);
                }
            });
        }

        // Initialize validation when document is ready
        document.addEventListener('DOMContentLoaded', function() {
            initializeValidation();
        });
    </script>
