    width: 40px;
    height: 40px;
    border: none;
    background: transparent;
    color: var(--text-secondary);
    font-size: 18px;
    cursor: pointer;
    border-radius: 8px;
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

.mobile-action-btn:active {
    background: var(--bg-tertiary);
    transform: scale(0.95);
}

.mobile-action-btn:hover {
    background: var(--bg-tertiary);
}

/* Change Password Button - Consistent with Action Buttons */
.btn-password-change {
    height: 40px;
    padding: 0 16px;
    border: none;
    background: transparent;
    color: var(--text-secondary);
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    border-radius: 8px;
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    text-decoration: none;
    white-space: nowrap;
}

.btn-password-change:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
}

.btn-password-change:active {
    transform: scale(0.95);
}

.btn-password-change i {
    font-size: 16px;
}

