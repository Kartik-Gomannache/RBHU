@model RBHU_DbServices.ViewModel.ProductListViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>

    <link rel="icon" type="image/x-icon" href="~/images/as_logo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" rel="stylesheet" />
</head>
<body>

<!-- Fixed Mobile Header -->
<div class="mobile-header">
    <div class="mobile-header-content">
        <button class="mobile-menu-btn" onclick="toggleMobileMenu()" id="mobileMenuBtn">
            <i class="fas fa-bars"></i>
        </button>
        <h1 class="mobile-header-title">Admin Panel</h1>
        <div class="mobile-header-actions">
            <button class="mobile-action-btn" onclick="toggleTheme()" id="themeToggleBtn">
                <i class="fas fa-moon" id="themeIcon"></i>
            </button>
            <button class="mobile-action-btn" onclick="refreshAll()">
                <i class="fas fa-sync-alt" id="refreshAllIcon"></i>
            </button>
              
        </div>
    </div>
</div>

<!-- Mobile Navigation Drawer -->
<div class="mobile-nav-overlay" id="mobileNavOverlay" onclick="toggleMobileMenu()"></div>
<div class="mobile-nav-drawer" id="mobileNavDrawer">
    <div class="mobile-nav-header">
            <img src="~/images/as_logo.png" height="50px" width="50p"/>
            <h2>Aniket Sales</h2>
        <button class="mobile-nav-close" onclick="toggleMobileMenu()">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <nav class="mobile-nav-menu">
        <button class="mobile-nav-item active" onclick="showTabMobile('dashboard')" id="dashboardTabMobile">
            <i class="fas fa-chart-line"></i>
            <span>Dashboard</span>
            <i class="fas fa-chevron-right"></i>
        </button>
        <button class="mobile-nav-item" onclick="showTabMobile('products')" id="productsTabMobile">
            <i class="fas fa-box"></i>
            <span>Products</span>
            <i class="fas fa-chevron-right"></i>
        </button>
        <button class="mobile-nav-item" onclick="showTabMobile('emails')" id="emailsTabMobile">
            <i class="fas fa-envelope"></i>
            <span>Emails</span>
            <i class="fas fa-chevron-right"></i>
        </button>
        <a href="/Home/Home" class="mobile-nav-item">
            <i class="fas fa-home"></i>
            <span>View Website</span>
            <i class="fas fa-external-link-alt"></i>
        </a>
    </nav>
    <div class="mobile-nav-footer">
        <button class="mobile-nav-logout" onclick="logout()">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
        </button>
    </div>
</div>

<!-- Dashboard Content -->
<div class="tab-content active" id="dashboardContent">
    <div class="dashboard-container">
        <!-- Welcome Section -->
        <div class="welcome-section">
            <h2>Dashboard Overview</h2>
            <p>Welcome back! Here's your store summary</p>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card stat-card-primary">
                <div class="stat-icon">
                    <i class="fas fa-box"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Products.Count</div>
                    <div class="stat-label">Total Products</div>
                </div>
                <div class="stat-badge stat-badge-success">
                    <i class="fas fa-arrow-up"></i> 12%
                </div>
            </div>

            <div class="stat-card stat-card-success">
                <div class="stat-icon">
                    <i class="fas fa-tags"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Categories.Count</div>
                    <div class="stat-label">Categories</div>
                </div>
                <div class="stat-badge stat-badge-info">Active</div>
            </div>

            <div class="stat-card stat-card-info">
                <div class="stat-icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Emails.Count</div>
                    <div class="stat-label">Total Inquiries</div>
                </div>
                <div class="stat-badge stat-badge-primary">Messages</div>
            </div>

            <div class="stat-card stat-card-warning">
                <div class="stat-icon">
                    <i class="fas fa-bell"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Emails.Count(e => e.Unread)</div>
                    <div class="stat-label">Unread Emails</div>
                </div>
                <div class="stat-badge stat-badge-danger">Urgent</div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="charts-section">
            <div class="chart-card">
                <div class="chart-header">
                    <h3><i class="fas fa-chart-bar"></i> Products by Category</h3>
                </div>
                <div class="chart-body">
                    <canvas id="categoryChart"></canvas>
                </div>
            </div>

            <div class="chart-card">
                <div class="chart-header">
                    <h3><i class="fas fa-chart-pie"></i> Email Status</h3>
                </div>
                <div class="chart-body">
                    <canvas id="emailChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Recent Items Section -->
        <div class="recent-section">
            <!-- Recent Products -->
            <div class="recent-card">
                <div class="recent-header">
                    <h3><i class="fas fa-box"></i> Recent Products</h3>
                    <button class="view-all-btn" onclick="showTab('products')">
                        View All <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
                <div class="recent-list">
                    @if (Model.Products.Any())
                    {
                        @foreach (var product in Model.Products.Take(5))
                        {
                            <div class="recent-item">
                                <div class="recent-item-image">
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" alt="@product.Name">
                                    }
                                    else
                                    {
                                        <i class="fas fa-image"></i>
                                    }
                                </div>
                                <div class="recent-item-content">
                                    <div class="recent-item-name">@product.Name</div>
                                    <div class="recent-item-meta">
                                        <span class="badge badge-sm">@product.Category?.Name</span>
                                        <span class="price">₹@product.Price.ToString("N0")</span>
                                    </div>
                                </div>
                                <div class="recent-item-time">
                                    <div>@product.CreatedAt?.ToString("MMM dd")</div>
                                    <small>@product.CreatedAt?.ToString("HH:mm")</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-box fa-3x"></i>
                            <p>No products yet</p>
                            <button onclick="window.location.href='/Product/Create'" class="btn-primary-sm">
                                Add First Product
                            </button>
                        </div>
                    }
                </div>
            </div>

            <!-- Recent Emails -->
            <div class="recent-card">
                <div class="recent-header">
                    <h3><i class="fas fa-envelope"></i> Recent Inquiries</h3>
                    <button class="view-all-btn" onclick="showTab('emails')">
                        View All <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
                <div class="recent-list">
                    @if (Model.Emails.Any())
                    {
                        @foreach (var email in Model.Emails.OrderByDescending(e => e.ReceivedUtc).Take(5))
                        {
                            <div class="recent-item @(email.Unread ? "unread" : "")">
                                <div class="recent-item-avatar">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="recent-item-content">
                                    <div class="recent-item-name">@email.FromName</div>
                                    <div class="recent-item-subject">@email.Subject</div>
                                    <div class="recent-item-badges">
                                        @if (email.Unread)
                                        {
                                            <span class="badge badge-danger badge-xs">New</span>
                                        }
                                        @if (email.IsContactForm)
                                        {
                                            <span class="badge badge-success badge-xs">Contact</span>
                                        }
                                    </div>
                                </div>
                                <div class="recent-item-time">
                                    <div>@email.ReceivedUtc.ToString("MMM dd")</div>
                                    <small>@email.ReceivedUtc.ToString("HH:mm")</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-envelope fa-3x"></i>
                            <p>No inquiries yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Category Summary -->
        <div class="category-section">
            <div class="section-header">
                <h3><i class="fas fa-layer-group"></i> Category Distribution</h3>
            </div>
            <div class="category-grid">
                @foreach (var category in Model.Categories)
                {
                    var productCount = Model.Products.Count(p => p.CategoryId == category.Id);
                    var percentage = Model.Products.Any() ? (productCount * 100.0 / Model.Products.Count) : 0;
                    <div class="category-card">
                        <div class="category-header">
                            <div class="category-icon">
                                <i class="fas fa-folder"></i>
                            </div>
                            <span class="category-count">@productCount</span>
                        </div>
                        <div class="category-name">@category.Name</div>
                        <div class="category-progress">
                            <div class="progress-bar" style="width: @percentage%"></div>
                        </div>
                        <div class="category-percentage">@percentage.ToString("F1")%</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Products Content (Iframe) -->
<div class="tab-content" id="productsContent">
    <iframe id="productsIframe" src="/Product/Index"></iframe>
</div>

<!-- Emails Content (Iframe) -->
<div class="tab-content" id="emailsContent">
    <iframe id="emailsIframe"></iframe>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>

<script>
    let currentTab = 'dashboard';
    let categoryChart, emailChart;

    // Mobile Menu Toggle
    function toggleMobileMenu() {
        const drawer = document.getElementById('mobileNavDrawer');
        const overlay = document.getElementById('mobileNavOverlay');
        const btn = document.getElementById('mobileMenuBtn');
        
        drawer.classList.toggle('active');
        overlay.classList.toggle('active');
        
        if (drawer.classList.contains('active')) {
            document.body.style.overflow = 'hidden';
            btn.innerHTML = '<i class="fas fa-times"></i>';
        } else {
            document.body.style.overflow = '';
            btn.innerHTML = '<i class="fas fa-bars"></i>';
        }
    }

    function showTabMobile(tabName) {
        showTab(tabName);
        toggleMobileMenu();
    }

    // Theme Management
    function initTheme() {
        const savedTheme = localStorage.getItem('adminTheme') || 'light';
        applyTheme(savedTheme);
    }

    function toggleTheme() {
        const currentTheme = document.body.getAttribute('data-theme') || 'light';
        const newTheme = currentTheme === 'light' ? 'dark' : 'light';
        applyTheme(newTheme);
        localStorage.setItem('adminTheme', newTheme);
        applyThemeToIframes(newTheme);
    }

    function applyTheme(theme) {
        document.body.setAttribute('data-theme', theme);
        const themeIcon = document.getElementById('themeIcon');
        if (theme === 'dark') {
            themeIcon.classList.remove('fa-moon');
            themeIcon.classList.add('fa-sun');
        } else {
            themeIcon.classList.remove('fa-sun');
            themeIcon.classList.add('fa-moon');
        }
        
        if (categoryChart) updateChartTheme(categoryChart);
        if (emailChart) updateChartTheme(emailChart);
    }

    function applyThemeToIframes(theme) {
        const productsIframe = document.getElementById('productsIframe');
        if (productsIframe && productsIframe.contentWindow) {
            try {
                productsIframe.contentWindow.postMessage({
                    type: 'THEME_CHANGE',
                    theme: theme
                }, '*');
            } catch (e) {
                console.log('Could not apply theme to products iframe:', e);
            }
        }
        
        const emailsIframe = document.getElementById('emailsIframe');
        if (emailsIframe && emailsIframe.contentWindow && emailsIframe.src) {
            try {
                emailsIframe.contentWindow.postMessage({
                    type: 'THEME_CHANGE',
                    theme: theme
                }, '*');
            } catch (e) {
                console.log('Could not apply theme to emails iframe:', e);
            }
        }
    }

    function updateChartTheme(chart) {
        const theme = document.body.getAttribute('data-theme') || 'light';
        const textColor = theme === 'dark' ? '#e2e8f0' : '#64748b';
        const gridColor = theme === 'dark' ? '#334155' : '#f1f5f9';
        
        if (chart.options.scales) {
            if (chart.options.scales.y) {
                chart.options.scales.y.ticks.color = textColor;
                chart.options.scales.y.grid.color = gridColor;
            }
            if (chart.options.scales.x) {
                chart.options.scales.x.ticks.color = textColor;
                chart.options.scales.x.grid.color = gridColor;
            }
        }
        if (chart.options.plugins.legend) {
            chart.options.plugins.legend.labels.color = textColor;
        }
        chart.update();
    }

    function showTab(tabName) {
        document.querySelectorAll('.tab-content').forEach(content => {
            content.classList.remove('active');
        });
        
        document.querySelectorAll('.mobile-nav-item').forEach(item => {
            item.classList.remove('active');
        });

        document.getElementById(tabName + 'Content').classList.add('active');
        
        const mobileTab = document.getElementById(tabName + 'TabMobile');
        if (mobileTab) {
            mobileTab.classList.add('active');
        }

        currentTab = tabName;

        if (tabName === 'emails' && !document.getElementById('emailsIframe').src) {
            document.getElementById('emailsIframe').src = '@Url.Action("Admin", "Admin")';
        }
    }

    function refreshAll() {
        $('#refreshAllIcon').addClass('fa-spin');
        
        if (currentTab === 'products') {
            document.getElementById('productsIframe').src = document.getElementById('productsIframe').src;
        } else if (currentTab === 'emails') {
            if (document.getElementById('emailsIframe').src) {
                document.getElementById('emailsIframe').src = document.getElementById('emailsIframe').src;
            }
        }

        setTimeout(() => {
            $('#refreshAllIcon').removeClass('fa-spin');
            if (currentTab === 'dashboard') {
                location.reload();
            }
        }, 1000);
    }

    function logout() {
        if (confirm('Are you sure you want to logout?')) {
            localStorage.removeItem('IsLoggedIn');
            window.location.href = '/Login/Login';
        }
    }

    function initCharts() {
        const theme = document.body.getAttribute('data-theme') || 'light';
        const textColor = theme === 'dark' ? '#e2e8f0' : '#64748b';
        const gridColor = theme === 'dark' ? '#334155' : '#f1f5f9';

        // Category Chart
        const categoryCtx = document.getElementById('categoryChart');
        const categoryData = @Html.Raw(Json.Serialize(Model.Categories.Select(c => new
        {
            name = c.Name,
            count = Model.Products.Count(p => p.CategoryId == c.Id)
        })));

        categoryChart = new Chart(categoryCtx, {
            type: 'bar',
            data: {
                labels: categoryData.map(c => c.name),
                datasets: [{
                    label: 'Products',
                    data: categoryData.map(c => c.count),
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.8)',
                        'rgba(75, 192, 192, 0.8)',
                        'rgba(255, 206, 86, 0.8)',
                        'rgba(153, 102, 255, 0.8)'
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 2,
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0,
                            color: textColor
                        },
                        grid: {
                            display: true,
                            drawBorder: false,
                            color: gridColor
                        }
                    },
                    x: {
                        ticks: {
                            color: textColor
                        },
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Email Status Chart
        const emailCtx = document.getElementById('emailChart');
        const totalEmails = @Model.Emails.Count;
        const unreadEmails = @Model.Emails.Count(e => e.Unread);
        const readEmails = totalEmails - unreadEmails;

        emailChart = new Chart(emailCtx, {
            type: 'doughnut',
            data: {
                labels: ['Read', 'Unread'],
                datasets: [{
                    data: [readEmails, unreadEmails],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.8)',
                        'rgba(255, 99, 132, 0.8)'
                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 99, 132, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 15,
                            usePointStyle: true,
                            color: textColor
                        }
                    }
                }
            }
        });
    }

    $(document).ready(function () {
        initTheme();
        showTab('dashboard');
        initCharts();
    });
</script>

