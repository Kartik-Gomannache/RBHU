@model List<RBHU_DbServices.Models.Email>
@{
    ViewData["Title"] = "Customer Emails";
    Layout = "";
}

<link rel="icon" type="image/x-icon" href="~/images/as_logo.png">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<div class="email-container">
    <!-- Header Section -->
    <div class="email-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1"><i class="fas fa-envelope me-2"></i>Customer Inquiries</h4>
                <p class="text-muted mb-0 small">Manage and respond to customer messages</p>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-sm btn-outline-secondary" onclick="showStats()">
                    <i class="fas fa-chart-bar me-1"></i><span class="btn-text">Statistics</span>
                </button>
                <button class="btn btn-sm btn-primary" onclick="refreshData()">
                    <i class="fas fa-sync-alt me-1" id="refreshIcon"></i><span class="btn-text">Refresh</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Stats Cards (Collapsible) -->
    <div id="statsPanel" class="stats-panel" style="display: none;">
        <div class="row g-3 mb-4">
            <div class="col-lg-3 col-md-6 col-6">
                <div class="stat-card">
                    <div class="stat-icon bg-primary-light">
                        <i class="fas fa-envelope text-primary"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" id="statTotal">@Model.Count()</h3>
                        <p class="stat-label">Total Emails</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-6">
                <div class="stat-card">
                    <div class="stat-icon bg-success-light">
                        <i class="fas fa-check-circle text-success"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" id="statContactForms">@Model.Count(e => e.IsContactForm)</h3>
                        <p class="stat-label">Contact Forms</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-6">
                <div class="stat-card">
                    <div class="stat-icon bg-warning-light">
                        <i class="fas fa-bell text-warning"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" id="statUnread">@Model.Count(e => e.Unread)</h3>
                        <p class="stat-label">Unread Messages</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-6">
                <div class="stat-card">
                    <div class="stat-icon bg-info-light">
                        <i class="fas fa-clock text-info"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" id="statSyncTime">--:--</h3>
                        <p class="stat-label">Last Updated</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
        <div class="row g-2">
            <div class="col-lg-6 col-md-12 col-12">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input id="searchBox" class="form-control" placeholder="Search by name, email, company, phone..." />
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-6">
                <select id="filterStatus" class="form-select">
                    <option value="">All Status</option>
                    <option value="unread">Unread Only</option>
                    <option value="attachments">With Attachments</option>
                    <option value="contact-forms">Contact Forms Only</option>
                </select>
            </div>
            <div class="col-lg-3 col-md-6 col-6">
                <select id="filterDate" class="form-select">
                    <option value="">All Time</option>
                    <option value="today">Today</option>
                    <option value="week">This Week</option>
                    <option value="month">This Month</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Email Table -->
    <div class="table-container">
        <table id="emailsTable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Contact Info</th>
                    <th>Company Details</th>
                    <th>Phone</th>
                    <th>Received</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var email in Model)
                {
                    <tr id="email-row-@email.Id" class="@(email.Unread ? "row-unread" : "")">
                        <td>
                            <div class="contact-info">
                                <div class="contact-avatar">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="contact-details">
                                    <div class="contact-name">@email.FromName</div>
                                    <div class="contact-email">@email.FromEmail</div>
                                    <div class="contact-subject">@email.Subject</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(email.Company))
                            {
                                <div class="company-name">@email.Company</div>
                            }
                            @if (!string.IsNullOrEmpty(email.GstNumber))
                            {
                                <div class="gst-number">GST: @email.GstNumber</div>
                            }
                            @if (string.IsNullOrEmpty(email.Company) && string.IsNullOrEmpty(email.GstNumber))
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(email.Phone))
                            {
                                <div class="phone-number">
                                    <i class="fas fa-phone me-1"></i>@email.Phone
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <div class="date-time">
                                <div class="date">@email.ReceivedUtc.ToString("MMM dd, yyyy")</div>
                                <div class="time">@email.ReceivedUtc.ToString("HH:mm")</div>
                            </div>
                        </td>
                        <td>
                            <div class="status-badges">
                                @if (email.Unread)
                                {
                                    <span class="badge badge-unread">
                                        <i class="fas fa-circle"></i> Unread
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-read">
                                        <i class="fas fa-check"></i> Read
                                    </span>
                                }

                                @if (email.IsContactForm)
                                {
                                    <span class="badge badge-contact">
                                        <i class="fas fa-wpforms"></i> Contact
                                    </span>
                                }

                                @if (email.HasAttachments)
                                {
                                    <span class="badge badge-attachment">
                                        <i class="fas fa-paperclip"></i>
                                    </span>
                                }
                            </div>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn-action btn-view" onclick="viewEmail(@email.Id)" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn-action btn-reply" onclick="replyToEmail('@email.FromEmail', '@email.Subject')" title="Reply">
                                    <i class="fas fa-reply"></i>
                                </button>
                                @if (email.Unread)
                                {
                                    <button class="btn-action btn-mark-read" onclick="markAsRead(@email.Id)" title="Mark as Read">
                                        <i class="fas fa-check-circle"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Detail Offcanvas -->
    <div class="offcanvas offcanvas-end email-detail-offcanvas" tabindex="-1" id="detailPane">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">
                <i class="fas fa-envelope-open me-2"></i>Email Details
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <div id="emailDetail"></div>
        </div>
    </div>

    <!-- Loading Modal -->
    <div class="modal fade" id="loadingModal" tabindex="-1">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center py-4">
                    <div class="spinner-border text-primary mb-3" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mb-0">Syncing emails...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>

<script>
    let table;

    // Theme Management
    function initTheme() {
        const savedTheme = localStorage.getItem('adminTheme') || 'light';
        applyTheme(savedTheme);
    }

    function applyTheme(theme) {
        document.body.setAttribute('data-theme', theme);
    }

    $(document).ready(function () {
        initTheme();

        // Listen for theme changes from parent dashboard
        window.addEventListener('message', function(event) {
            if (event.data && event.data.type === 'THEME_CHANGE') {
                applyTheme(event.data.theme);
            }
        });

        table = $('#emailsTable').DataTable({
            "order": [[3, "desc"]],
            "pageLength": 25,
            "responsive": true,
            "columnDefs": [
                { "orderable": false, "targets": [5] },
                { "width": "30%", "targets": 0 },
                { "width": "15%", "targets": 1 },
                { "width": "12%", "targets": 2 },
                { "width": "12%", "targets": 3 },
                { "width": "15%", "targets": 4 },
                { "width": "15%", "targets": 5 }
            ],
            "language": {
                "emptyTable": "No customer emails found",
                "info": "Showing _START_ to _END_ of _TOTAL_ emails",
                "infoEmpty": "Showing 0 to 0 of 0 emails",
                "search": "Search:"
            }
        });

        $('#searchBox').on('keyup', function () {
            table.search(this.value).draw();
        });

        $('#filterStatus').on('change', function () {
            var filterValue = this.value;

            if (filterValue === 'unread') {
                table.columns(4).search('Unread').draw();
            } else if (filterValue === 'attachments') {
                table.columns(4).search('paperclip').draw();
            } else if (filterValue === 'contact-forms') {
                table.columns(4).search('Contact').draw();
            } else {
                table.columns(4).search('').draw();
            }
        });

        updateStats();
    });

    function refreshData() {
        $('#refreshIcon').addClass('fa-spin');
        setTimeout(function () {
            location.reload();
        }, 1000);
    }

    function showStats() {
        $('#statsPanel').slideToggle(300);
        updateStats();
    }

    function updateStats() {
        $('#statSyncTime').text(new Date().toLocaleTimeString('en-US', {
            hour: '2-digit',
            minute: '2-digit'
        }));
    }

    function replyToEmail(fromEmail, subject) {
        var replySubject = subject.startsWith('Re: ') ? subject : 'Re: ' + subject;
        var mailtoLink = `mailto:${fromEmail}?subject=${encodeURIComponent(replySubject)}`;
        window.location.href = mailtoLink;
    }

    function viewEmail(emailId) {
        loadEmailDetail(emailId);
        var detailPane = new bootstrap.Offcanvas(document.getElementById('detailPane'));
        detailPane.show();
    }

    function loadEmailDetail(emailId) {
        var emailData = @Html.Raw(Json.Serialize(Model));
        var email = emailData.find(e => e.id === emailId);

        if (email) {
            var detailHtml = `
                    <div class="email-detail-content">
                        <div class="detail-section">
                            <div class="detail-label">From</div>
                            <div class="detail-value">
                                <div class="fw-bold">${email.fromName}</div>
                                <div class="text-muted small">${email.fromEmail}</div>
                            </div>
                        </div>

                        <div class="detail-section">
                            <div class="detail-label">Subject</div>
                            <div class="detail-value">${email.subject}</div>
                        </div>

                        ${email.company ? `
                            <div class="detail-section">
                                <div class="detail-label">Company</div>
                                <div class="detail-value">
                                    <div>${email.company}</div>
                                    ${email.gstNumber ? `<div class="text-muted small">GST: ${email.gstNumber}</div>` : ''}
                                </div>
                            </div>
                        ` : ''}

                        ${email.phone ? `
                            <div class="detail-section">
                                <div class="detail-label">Phone</div>
                                <div class="detail-value">
                                    <a href="tel:${email.phone}" class="text-decoration-none">
                                        <i class="fas fa-phone me-2"></i>${email.phone}
                                    </a>
                                </div>
                            </div>
                        ` : ''}

                        <div class="detail-section">
                            <div class="detail-label">Received</div>
                            <div class="detail-value">${new Date(email.receivedUtc).toLocaleString()}</div>
                        </div>

                        <div class="detail-section">
                            <div class="detail-label">Status</div>
                            <div class="detail-value">
                                ${email.unread ? '<span class="badge badge-unread">Unread</span>' : '<span class="badge badge-read">Read</span>'}
                                ${email.isContactForm ? '<span class="badge badge-contact ms-1">Contact Form</span>' : ''}
                                ${email.hasAttachments ? '<span class="badge badge-attachment ms-1"><i class="fas fa-paperclip"></i> Attachments</span>' : ''}
                            </div>
                        </div>

                        ${email.message ? `
                            <div class="detail-section">
                                <div class="detail-label">Message</div>
                                <div class="detail-message">
                                    ${email.message.replace(/\n/g, '<br>')}
                                </div>
                            </div>
                        ` : ''}

                        ${email.htmlBody ? `
                            <div class="detail-section">
                                <div class="detail-label">Email Content</div>
                                <div class="detail-html-body">
                                    ${email.htmlBody}
                                </div>
                            </div>
                        ` : ''}

                        <div class="detail-actions mt-4">
                            <button class="btn btn-primary w-100 mb-2" onclick="replyToEmail('${email.fromEmail}', '${email.subject}')">
                                <i class="fas fa-reply me-2"></i>Reply to Email
                            </button>
                            ${email.unread ? `
                                <button class="btn btn-outline-secondary w-100" onclick="markAsRead(${email.id})">
                                    <i class="fas fa-check-circle me-2"></i>Mark as Read
                                </button>
                            ` : ''}
                        </div>
                    </div>
                `;

            $('#emailDetail').html(detailHtml);
        }
    }

    function markAsRead(emailId) {
        $.ajax({
            url: '/Admin/MarkAsRead',
            type: 'POST',
            data: { id: emailId },
            success: function (response) {
                if (response.success) {
                    let row = $(`#email-row-${emailId}`);

                    row.removeClass('row-unread');

                    row.find('.badge-unread')
                        .removeClass('badge-unread')
                        .addClass('badge-read')
                        .html('<i class="fas fa-check"></i> Read');

                    row.find('.btn-mark-read').remove();

                    var unreadCount = parseInt($('#statUnread').text()) - 1;
                    $('#statUnread').text(unreadCount);

                    var detailPane = bootstrap.Offcanvas.getInstance(document.getElementById('detailPane'));
                    if (detailPane) {
                        detailPane.hide();
                    }

                    showToast('Email marked as read successfully', 'success');
                } else {
                    showToast('Failed to mark email as read', 'error');
                }
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
                showToast('An error occurred', 'error');
            }
        });
    }

    function showToast(message, type) {
        const bgColor = type === 'success' ? '#10b981' : '#ef4444';
        const icon = type === 'success' ? 'check-circle' : 'exclamation-circle';

        const toast = $(`
                <div class="custom-toast" style="background: ${bgColor}">
                    <i class="fas fa-${icon} me-2"></i>${message}
                </div>
            `);

        $('body').append(toast);

        setTimeout(() => {
            toast.addClass('show');
        }, 100);

        setTimeout(() => {
            toast.removeClass('show');
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }
</script>

<style>
    :root {
        --bg-primary: #f5f7fa;
        --bg-secondary: #ffffff;
        --bg-tertiary: #f8fafc;
        --text-primary: #2d3748;
        --text-secondary: #64748b;
        --text-muted: #94a3b8;
        --border-color: #e2e8f0;
        --border-light: #f1f5f9;
        --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
    }

    [data-theme="dark"] {
        --bg-primary: #0f172a;
        --bg-secondary: #1e293b;
        --bg-tertiary: #334155;
        --text-primary: #f1f5f9;
        --text-secondary: #cbd5e1;
        --text-muted: #94a3b8;
        --border-color: #334155;
