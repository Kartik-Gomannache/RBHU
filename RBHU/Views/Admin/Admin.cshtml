        flex-shrink: 0;
    }

    .contact-details {
        flex: 1;
        min-width: 0;
    }

    .contact-name {
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.95rem;
        margin-bottom: 2px;
    }

    .contact-email {
        color: var(--text-secondary);
        font-size: 0.85rem;
        margin-bottom: 4px;
    }

    .contact-subject {
        color: var(--text-muted);
        font-size: 0.8rem;
        white-space: nowrap;
