    }

    .stat-label {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin: 0;
    }

    /* Filter Section */
    .filter-section {
        background: var(--bg-secondary);
        padding: 20px;
        border-radius: 12px;
        border: 1px solid var(--border-color);
        margin-bottom: 20px;
    }

    .search-box {
        position: relative;
    }

    .search-box i {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-muted);
    }

    .search-box input {
        padding-left: 40px;
    }

    .form-control,
