        text-overflow: ellipsis;
    }

    /* Company Info */
    .company-name {
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.9rem;
        margin-bottom: 4px;
    }

    .gst-number {
        color: var(--text-secondary);
        font-size: 0.8rem;
    }

    /* Phone Number */
    .phone-number {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    /* Date Time */
